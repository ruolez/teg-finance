# TEG Finance Website Environment Configuration
# Copy this file to .env and update values

# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-secret-key-change-in-production-use-32-chars

# Database Configuration
POSTGRES_DB=teg_website
POSTGRES_USER=teg_admin
POSTGRES_PASSWORD=teg_secure_password_2025

# Port Configuration
PORT=80

# Initial Admin Account (used during first setup)
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=ChangeThisPassword123!

# Email Configuration (Gmail SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USE_TLS=true
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=your-email@gmail.com
EMAIL_RECIPIENT=contact@yourcompany.com
